{
  "manifest_version": 3,
  "name": "Trench Chat",
  "version": "1.0.5",
  "description": "CA-based chat rooms for memecoin trenches",
  "permissions": ["sidePanel", "storage", "clipboardRead"],
  "host_permissions": ["https://trench-chat-server-production.up.railway.app/*"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Trench Chat",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
